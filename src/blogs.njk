---
 layout: base.njk
 title: Articles
---

<section class="container pt-4 pb-16">
<div class=" gap-16">

    <div class="px-16">
        <ul class="grid grid-cols-2 gap-16 w-full py-8" id="searchResults">
            {% for articles in collections.articles %}
           
              <li class="py-2">
                <img src="{{articles.data.image}}" alt="bg1" class="rounded-xl">
                <div class="">
                    <p class="text-2xl font-semibold pt-8 ">{{articles.data.title}}</p>
                    <p class="pt-6 pb-6">{{articles.data.desc}}</p>
                    <a href="{{articles.url}}" class=" text-gray-900 px-6 py-3 rounded-3xl font-semibold hover:text-white hover:bg-gray-800 border border-gray-800 transition ease-in-out duration-500">Read more</a>
                </div>
              
              </li>
          
            {% endfor %}
          </ul>
       
</div>

</div>
</section>
      
          