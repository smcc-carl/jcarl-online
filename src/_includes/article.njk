---
layout: base.njk
templateEngineOverride: njk, md
---

<section class="px-[20%]">
    <div class="container py-16 leading-loose text-gray-700">
        <img class="rounded-3xl mb-6" src="{{ image }}" alt="{{ img-alt }}">
        <p>Visit website <a href="{{ link }}" class="text-indigo-600 underline">here</a></p>
        <p class="pt-16 pb-4 text-4xl font-semibold">{{ title }}</p>
    </div>

    <div class="text-gray-700">
        {{ content | safe }}
    </div>

    <div class="">
        {% set currentPost = page %}
        {% set relatedPosts = collections.all | filter(post => post.data.tags | intersection(currentPost.data.tags) | length > 0 and post.url != currentPost.url) %}

        {% if relatedPosts | length > 0 %}
        <div class="related-posts">
            <h2>Related Posts</h2>
            <ul>
                {% for post in relatedPosts %}
                    <li>
                        <a href="{{ post.url }}">{{ post.data.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}
    </div>
</section>
